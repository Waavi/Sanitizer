{
    "name": "binary-cats/sanitizer",
    "description": "Data sanitizer and Laravel form requests with input sanitation.",
    "keywords": [
        "binary cats",
        "input filter",
        "input sanitation",
        "input sanitizer",
        "input",
        "laravel",
        "sanitation",
        "transform input"
    ],
    "license": "MIT",
    "authors": [{
        "name": "Cyrill Kalita",
        "email": "cyrill.kalita@gmail.com"
    }],
    "require": {
        "illuminate/support": "^8.0|^9.0",
        "illuminate/validation": "^8.0|^9.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "BinaryCats\\Sanitizer\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests"]
    },
    "extra": {
        "laravel": {
            "providers": [
                "BinaryCats\\Sanitizer\\Laravel\\SanitizerServiceProvider"
            ],
            "aliases": {
                "Sanitizer": "BinaryCats\\Sanitizer\\Laravel\\Facade"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
